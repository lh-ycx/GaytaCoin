/**index.wxss**/
@import "../../style/weui.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
}

.userinfo-gender{
  width: 35rpx;
  height: 35rpx;
}

.index-menu{
  margin-top: 175rpx;
	width: 100%;
	display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.index-menu-item{
  flex: auto;
	text-align: center;
	margin-top: 10rpx;
	padding: 20rpx 20rpx;
	box-sizing: border-box;
	margin-bottom: -1rpx;
}
.index-menu-item image{
	width: 125rpx;
	height: 125rpx;
}
.index-menu-item text{
	display: block;
	font-size: 36rpx;
  font-family: 微软雅黑;
	line-height: 1.4;
	white-space: nowrap;
  color: white;
}

