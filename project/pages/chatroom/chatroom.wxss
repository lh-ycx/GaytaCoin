.nav{
  height: 40px;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: ivory;
}
.title{
  margin: 0 auto;
}
.more-icon{
  height: 45rpx;
  width: 50rpx;
  margin-right: 20rpx;
}

.msg-box{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  
}

.msg{
  margin-top: 5rpx; 
}

.myword{
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: flex-end;
}

.others{
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: flex-start;
}

.content{
  border: 1px solid ivory;
  border-radius: 20rpx;
  
  width: atuo;
  max-width: 90%;
  word-break: break-all;
  margin-left: 5rpx;
  margin-right: 5rpx;
}

.avatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.input-box{
  width:99%;
  height: 36px;
	border-radius:20rpx;
	border:2px solid #324B4E;
	background: ivory;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
}

.msg-input{
  margin-left: 10rpx;
  width: 90%; 
  height:50rpx;
}

.send-btn{
  margin-right: 20rpx;
  height: 45rpx;
  width: 50rpx;
}