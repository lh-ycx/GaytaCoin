.nav{
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: lightgray;
}
.title{
  margin: 0 auto;
}
.more-icon{
  height: 45rpx;
  width: 50rpx;
  margin-right: 20rpx;
}

.msg-box{
  display: flex;
  flex-direction: column;
}

.myword{
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: flex-end;
}

.others{
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: flex-start;
}

.input-box{
  width:99%;
	border-radius:20rpx;
	border:2px solid #324B4E;
	background: ivory;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
}

.msg-input{
  margin-left: 10rpx;
  width: 90%; 
  height:50rpx;
}

.send-btn{
  margin-right: 20rpx;
  height: 45rpx;
  width: 50rpx;
}