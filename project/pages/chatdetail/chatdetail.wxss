.stu-group{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}

.stu-info{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  flex: auto;
  width: 200rpx;
  height:200rpx;
}

.stu-avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.stu-name{
  font-size: 30rpx;
}