.input-box{
  margin-top: 8%;
  margin-left: 20%;
  margin-right: 20%;
}

.input-row{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}

.input-label{
  width: 100rpx;
  text-align: left;
  align-self: center;
}

.input{
  border:  2px solid ivory;
  border-radius: 20rpx;
  margin-top: 25rpx;
  height: 75rpx;
  width: 360rpx;
  background-color: ivory;
}

.button-box{
  margin-top: 5%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

button{
  width: 280rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 25rpx;
  color:  floralwhite;
  font-family: Arial, Helvetica, sans-serif;
  text-align: center;
  font-size: 36rpx;
  background-color: orange;
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
}

.button-hover{
  background-color:bisque;
  top:6rpx;
}

progress {
  width: 200px;
  margin:0 auto;
}

.load-progess{
  text-align: center;
  margin-top: 25%;
}

.notice{
  text-align: center;
  margin: 0 atuo;
  margin-top: 2%;
  color: gray;
  font-size:20rpx;
}

.notice-img{
  width:20rpx;
  height: 20rpx;
  margin-right:4rpx;
}

.logo{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-left: 38%;
  margin-top: 25%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 